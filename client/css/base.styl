@import url('http://fonts.googleapis.com/css?family=IM+Fell+DW+Pica+SC|Lustria');

/*  ---------  */
/***VARIABLES***/
/*  ---------  */

// spacing
pg-width = 68%
margin-width  = 15%
min-pg-width  = 300px
header-height = 200px
min-essay-pg-height = 200px
footer-height = 120px

// colors
dark-red  	= #38000d
dark-gray	= #0a0000
steel 		= #0f0c17
red-gray  	= #420b0b
light-gray	= #999
error-red 	= #c34646
fafa-white	= #fafafa
trans-gray 	= rgba(40,40,40,.2)
trans-black = rgba(0,0,0,.2)
trans-white = rgba(255,235,235,.02)

footer-color = black

// fonts
font = 'Lustria', serif;
font-color = $dark_gray;
a-color = #600a06;
a-visited = #60062d;
highlight_color = rgba(96, 0, 10, 0.85);
h-font1 = 'IM Fell DW Pica SC', serif;
h-font2 = $font_family; 

/*   ------   */
/****MIXINS****/
/*   ------   */

gradient(color1,color2,color3)
  background-color color1
  background-image -webkit-linear-gradient color1 color2 color3
  background-image -moz-linear-gradient top color1 color2 color3
  background-image -ms-linear-gradient color1 color2 color3
  background-image -o-linear-gradient color1 color2 color3
  background-image linear-gradient(color1, color2, color3)

transition()
	-webkit-transition arguments
	-moz-transition arguments
	-o-transition arguments 
	transition arguments

shadow()
	-webkit-box-shadow arguments 
	-moz-box-shadow arguments
	box-shadow arguments
			
/*   ------   */
/****STYLES****/
/*   ------   */

html, body
	margin 0
	padding 0
	font-family font

header
	margin 0 auto
	width pg-width
	position relative

div.header-wrapper
	display block
	height 100px
	width 100%
	padding 10px
	z-index 9999 
	//background-color trans-white
	shadow 0 1px 5px 0px fafa-white
	gradient dark-red (dark-red+3%) (dark-red)


div.margin 
	width margin-width
	height 100%
	background-color trans-gray
	z-index -1

div.margin.contracted
	width 0%
	transition width 2s

div.margin.expanded
	width 30%
	transition width 2s

#left-margin
	float left
	border-right 4px solid trans-black
	
#right-margin 
	float right
	border-left 4px solid trans-black

div#content-wrapper
	height 80%
	padding: 0px 15px
	overflow-y scroll
	z-index -1
	transition width 2s
	h1
		font-family h-font1

div#content-wrapper.contracted
	width 30%
	transition width 2s

#container
	height 100%
	width 100%
	overflow-y scroll
	margin 0
	gradient dark-red dark-gray dark-gray
	position absolute

#content
	margin 0 auto

.page
	background-color fafa-white
	shadow 0 0px 1px 2px #aaa
	padding 10px
	//min-height min-essay-pg-height
	height 3000px
	margin-bottom 10px

div#footer-wrapper
	background-color footer-color
	height footer-height

footer 
	width pg-width
	margin 0 auto
	padding 10px
	color dark-red
	font-family h-font1
	
nav 
	margin 10px 0 5px 20px
	a 
		color fafa-white
		text-decoration none
		font-weight bold

div#login
	float right
	border 2px solid dark-gray
	border-radius 5px
	position absolute
	top 0
	right 0

a
	color a-color
